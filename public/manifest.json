{
  "manifest_version": 3,
  "name": "AI Trust Analysis",
  "description": "Analyse the trustworthiness of your conversations with AI chatbots.",
  "version": "1.0.0",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "host_permissions": [
    "https://css2-ai.dynodel.com/*",
    "https://chatgpt.com/*",
    "https://chat.deepseek.com/*",
    "https://claude.ai/*",
    "https://gemini.google.com/*",
    "https://grok.com/*"
  ],
  "permissions": ["scripting", "storage"]
}
